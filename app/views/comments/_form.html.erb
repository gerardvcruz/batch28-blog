<p class="text-lg text-slate-500">
  Write a Comment
</p>

<%= form_with url: article_comments_path(@article.id), method: :post, local: true do |f| %>
  <%= f.text_area :body, class: "placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-slate-300 rounded-md py-2 pl-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" %>

  <%= f.submit %> 
<% end %>
