<div class="p-3 border-b-2 flex">
  <div class="w-40 self-start">
    <%= link_to root_path do %>
      <img src="https://miro.medium.com/v2/resize:fit:8978/1*s986xIGqhfsN8U--09_AdA.png" alt="">
    <% end %>
  </div>

  <div class="flex-0 m-2 place-end">
    <%= link_to 'New Article', new_article_path %>
  </div>

  <div class="flex-0 m-2 place-end">
    <% if reader_signed_in? %>
      <%= button_to "Sign out", destroy_reader_session_path, method: :delete  %>
    <% else %>
      <%= button_to "Sign in", new_reader_session_path %>
    <% end %>
  </div>
</div>
